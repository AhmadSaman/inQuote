---
import Layout from "../layouts/AtomicHabits.astro";
const content = await Astro.glob("../content/atomic-habits/*.md");
---

<Layout title="Atomic Habits">
  <div class="flex flex-col content-center justify-center w-full">
    <div class="min-h-screen flex justify-center m-0 p-0">
      <h1 class="text-5xl font-extrabold text-[#CCB49C] self-center">
        Atomic Habits
      </h1>
    </div>
    <div class="prose self-center w-2/4">
      {content.map(({ Content }) => <Content />)}
    </div>
  </div>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400&display=swap");
  * {
    font-family: "Roboto Slab", serif;
  }
</style>
